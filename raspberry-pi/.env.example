# ====================================
# CONFIGURACIÓN RASPBERRY PI CLIENT
# ====================================
# Copiar este archivo como .env y completar con valores reales

# Servidor
SERVER_HOST=tu-servidor.example.com
SERVER_PROTOCOL=https
DEVICE_ID=pi-aula-101

# Cámara
FRAME_WIDTH=640
FRAME_HEIGHT=480
JPEG_QUALITY=70
CAPTURE_INTERVAL=2.0

# GPIO (Pines BCM)
LED_GREEN_PIN=17
LED_RED_PIN=27
LED_DURATION=2

# Conexión
REQUEST_TIMEOUT=5
WS_RECONNECT_DELAY=5

# Stream de Video (para monitoreo desde dashboard centralizado)
ENABLE_WEB_STREAM=true
WEB_STREAM_PORT=8080
